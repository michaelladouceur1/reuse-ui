{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"strict": true,
		"jsx": "react",
		"declaration": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@lib/*": ["./src/lib/*"],
			"@styles/*": ["./src/styles/*"]
		},
		"plugins": [{ "name": "typescript-plugin-css-modules" }],
		"typeRoots": ["types"]
	},
	"include": ["src/**/*", "types", "index.ts"],
	"exclude": ["node_modules", "dist", "src/tests"]
}
