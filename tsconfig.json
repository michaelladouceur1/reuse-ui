{
	"compilerOptions": {
		"strict": true,
		"jsx": "react",
		"declaration": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@types": ["types"],
			"@types/*": ["types/*"]
		}
	},
	"include": ["src/**/*", "types", "index.ts"],
	"exclude": ["node_modules", "dist", "src/tests"]
}
